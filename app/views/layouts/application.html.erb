<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || Settings.app_name %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/"><%= Settings.navbar.brand %></a>
        <div class="navbar-nav ms-auto">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><%= link_to t("navbar.home"), root_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.help"), help_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.contact"), contact_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to t("navbar.login"), "#", class: "nav-link" %></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
