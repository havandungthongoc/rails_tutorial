<h1><%= t("user.index.title") %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t("user.attributes.name") %></th>
      <th><%= t("user.attributes.email") %></th>
      <th><%= t("user.attributes.subdomain") %></th>
      <th><%= t("user.attributes.birthday") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
       <td><%= link_to user.name, user_path(user, locale: I18n.locale), class: "link" %></td>

        <td><%= user.email %></td>
        <td><%= user.subdomain %></td>
        <td><%= user.birthday&.strftime("%d/%m/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>