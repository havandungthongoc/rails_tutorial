<!-- app/views/sessions/new.html.erb -->
<% provide :title, t("sessions.new.title") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= t("sessions.new.title") %></h1>
    <% if flash[:danger] %>
      <div class="alert alert-danger">
        <%= flash[:danger] %>
      </div>
    <% end %>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="field">
        <%= f.label :email, t("sessions.new.email") %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :password, t("sessions.new.password") %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :remember_me, class: 'checkbox inline' do %>
          <%= f.check_box :remember_me %>
          <span><%= t("sessions.new.remember_me") %></span>
        <% end %>
      </div>
      <div class="actions">
        <%= f.submit t("sessions.new.submit"), class: 'btn btn-primary' %>
      </div>
    <% end %>
    <p> <%= link_to t("navbar.register"), register_path %></p>
  </div>
</div>
